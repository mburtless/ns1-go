package main

import (
	"fmt"
	"log"
	"os"

	httptransport "github.com/go-openapi/runtime/client"
	"github.com/mburtless/ns1-go-v3/ns1/client"
	"github.com/mburtless/ns1-go-v3/ns1/client/zones"
)

func main() {
	k := os.Getenv("NS1_APIKEY")
	if k == "" {
		fmt.Println("NS1_APIKEY environment variable is not set, giving up")
		os.Exit(1)
	}

	ns1 := client.Default
	auth := httptransport.APIKeyAuth("X-NSONE-Key", "header", k)
	zoneIn := zones.NewZonesByZoneGetParams()
	zoneIn.SetZone("ipsumzone.test")
	zone, err := ns1.Zones.ZonesByZoneGet(zoneIn, auth)
	if err != nil {
		log.Panic(err)
	}
	for _, record := range zone.Payload.Records {
		fmt.Printf("%#v\n", *record.ID)
	}
}
